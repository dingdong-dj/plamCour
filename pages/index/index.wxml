<!--index.wxml-->
<view class='content'>
  <view class='info' wx:for="{{infoList}}" wx:key="infoList123" >
    <view class='info-box'>
      <text class="title12" >{{item.name}}</text>
      <text class="number" bindtap="bindViewTap" data-number='{{item.name}}' data-title='{{item.name}}'>{{item.value}}</text>
    </view>
  </view>
</view>
<block wx:if = "{{role ==1}}">
  <view class='content'>
    <block wx:for="{{gaugeList1}}" wx:for-item="item" wx:key = "key">
      <view class='gauge'>
        <ec-canvas id="gauge-cancas" canvas-id="gauge-cancas" tuData="{{item}}" ec="{{ gauge }}"></ec-canvas>
      </view>
    </block>
    <!-- <view class='gauge'>
        <ec-canvas canvas-id='gugue-cancas-one' ec="{{guage_econe_one}}"></ec-canvas>
    </view>
    <view class='gauge'>
    <ec-canvas canvas-id='gugue-cancas-two' ec="{{ guage_econe_two }}"></ec-canvas>
    </view> -->
    <block wx:for="{{pieList}}" wx:for-item="item" wx:key = "key">
      <view class='pie'>
        <ec-canvas id="pie-cancas" canvas-id="pie-cancas" tuData="{{item}}" ec="{{ pie }}"></ec-canvas>
      </view>
    </block>
  </view>
  <view class='content'>
    <view class = 'radar'>
        <ec-canvas id = 'radar-cancas-id'canvas-id='radar-cancas' tuData="{{randerInfo}}" ec="{{ radar_ec }}"></ec-canvas>
    </view>
  </view>
</block>
<block wx:elif = "{{role == 2}}">
  <view class='content'>
    <block wx:for="{{gaugeList}}" wx:for-item="item" wx:key = "key">
      <view  class='gauge'>
        <ec-canvas id="mychart-dom-bar" canvas-id="mychart-bar" tuData="{{item}}" ec="{{ gauge }}"></ec-canvas>
      </view>
    </block>
  </view>
  <view class='content'>
    <view class = 'radar'>
        <ec-canvas id = 'radar-cancas-id'canvas-id='radar-cancas' tuData="{{randerInfo}}" ec="{{ radar_ec }}"></ec-canvas>
    </view>
  </view>
</block>

<block wx:else>
  <view class='content'>
    <block wx:for="{{gaugeList}}" wx:for-item="item" wx:key = "key">
      <view  class='gauge'>
        <ec-canvas id="mychart-dom-bar" canvas-id="mychart-bar" tuData="{{item}}" ec="{{ gauge }}"></ec-canvas>
      </view>
    </block>
  </view>
</block>



