  align-items:center;/*垂直居中*/
}
.info{
  width: 50%;
  height: 30%;
}
.info-box{
  margin-top: 20rpx;
  width:50%;
  background: #1890ff;
  border: 2rpx solid rgb(123, 163, 236);
  border-radius:10rpx; 
}
.gauge{
  width: 45%;
  height: 300rpx;
}
.pie{
  width: 50%;
  height: 300rpx;
}
.radar{
