
page{ 
 height: 100%; 
} 
  
.container1 { 
 height: 100%; 
 display: flex; 
 flex-direction: column; 
 padding: 0; 
 box-sizing: border-box; 
 background-color: #f2f2f2
} 
  
/*登录图片*/
.login-icon{ 
 flex: none; 
} 
.login-img{ 
 width: 750rpx; 
} 
  
/*表单内容*/
.login-from { 
  margin-top: 40rpx; 
  flex: auto; 
  height:100%; 
} 
  
.inputView { 
 background-color: #fff; 
 line-height: 88rpx; 
} 
.inputView1 { 
 background-color: #fff; 
 line-height: 100rpx; 
} 
/*输入框*/
.nameImage, .keyImage { 
 margin-left: 44rpx; 
 width: 30rpx; 
 height: 30rpx;
} 
  
.loginLab { 
 margin: 30rpx 30rpx 30rpx 20rpx; 
 color: #545454; 
 font-size: 28rpx;
} 
.inputText { 
  width: 500rpx;
  flex: block; 
  float: right; 
  text-align: right; 
  margin-right: 44rpx; 
  margin-top: 20rpx; 
  color: #2e0404; 
  font-size: 30rpx;
} 
.inputText1 { 
  width: 500rpx;
  flex: block; 
  float:right; 
  text-align: left; 
  margin-top: 20rpx; 
  color: #2e0404; 
  font-size: 30rpx;
} 
  
.line { 
 width: 100%; 
 height: 2rpx; 
 background-color: #cccccc; 
 margin-top: 2rpx; 
} 
/*按钮*/
.loginBtnView { 
 width: 100%; 
 height: auto; 
 background-color: #f2f2f2; 
 margin-top: 0rpx; 
 margin-bottom: 0rpx; 
 padding-bottom: 0rpx; 
} 
  
.loginBtn { 
  background-color:#23bddf;
  color: white;
  width: 80%; 
  margin-top: 70rpx; 
}
.body-view{
  font-size: 15px;
  font-family:Courier;
}
.section{
  margin-top: 10px;
  display: flex;
  align-items: center;
  justify-content: center;  
}